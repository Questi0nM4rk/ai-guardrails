{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "deny": [
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(:*fork bomb:*)",
      "Read(**/secrets/**)",
      "Read(**/.env.local)",
      "Read(**/*.pem)",
      "Read(**/*_rsa)",
      "Write(**/secrets/**)",
      "Write(**/.env*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.ai-guardrails/hooks/dangerous-command-check.sh \"$CLAUDE_TOOL_INPUT_COMMAND\" 2>/dev/null"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "case \"$CLAUDE_TOOL_INPUT_COMMAND\" in 'git commit'*) ~/.ai-guardrails/hooks/pre-commit.sh 2>/dev/null || true ;; 'git push'*) ~/.ai-guardrails/hooks/pre-push.sh 2>/dev/null || true ;; esac"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.ai-guardrails/hooks/auto-format.sh \"$CLAUDE_TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
